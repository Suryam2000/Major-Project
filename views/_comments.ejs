<li id="comment-<%= comment._id %>">
    <p>
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
        <small>
            <% if( locals.user && locals.user.id == comment.user.id ){ %>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>/<%= i.user._id %>">Delete</a>
            <% } %>
            <% if( locals.user && locals.user.id == i.user.id && locals.user.id != comment.user.id ){ %>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>/<%= i.user._id %>">Delete</a>
            <% } %>
        </small>
        <br>
        <small>
            <% if(locals.user){ %>
                <a class="toggle-like-btn" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%= comment._id %>&type=Comment">
                    <%= comment.likes.length %> Likes
                </a>
            <% }else{ %>
                <%= comment.likes.length %> Likes
            <% } %>
        </small>
    </p>
</li>